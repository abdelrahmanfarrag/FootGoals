<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:padding="@dimen/medium_padding"
    app:cardElevation="@dimen/small_margin">

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@drawable/league_ripple">

    <ImageView
        android:id="@+id/league_icon"
        android:layout_width="@dimen/small_view_width"
        android:layout_height="@dimen/small_view_height"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginStart="@dimen/large_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/league_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/xlarge_margin"
        android:fontFamily="@font/archivo_black"
        android:padding="@dimen/small_padding"
        android:textAlignment="center"
        android:textColor="@color/blackColor"
        android:textSize="@dimen/small_txt_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/league_icon"
        app:layout_constraintStart_toEndOf="@+id/league_icon"
        app:layout_constraintTop_toTopOf="@+id/league_icon"/>

    <ImageView
        android:id="@+id/next_league_arrow"
        android:layout_width="@dimen/small_view_height"
        android:layout_height="@dimen/small_view_height"
        android:layout_marginEnd="@dimen/small_margin"
        android:contentDescription="@null"
        android:padding="@dimen/small_padding"
        android:src="@drawable/arrow"
        app:layout_constraintBottom_toBottomOf="@+id/league_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/league_icon"/>
  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>