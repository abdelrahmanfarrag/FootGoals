<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    app:cardCornerRadius="6dp"
    android:layout_margin="@dimen/x_small_margin"
    tools:targetApi="lollipop">

  <android.support.constraint.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/darkRed">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha=".4"
        android:scaleType="fitXY"
        android:src="@drawable/fixtures"
        android:contentDescription="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fixture_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/silverColor"
        android:textSize="@dimen/medium_txt_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/fixture_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/small_txt_size"
        app:layout_constraintEnd_toEndOf="@+id/fixture_date"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/fixture_date"
        app:layout_constraintTop_toBottomOf="@+id/fixture_date"/>

    <ImageView
        android:id="@+id/fixture_home_img"
        android:layout_width="@dimen/small_view_width"
        android:layout_height="@dimen/small_view_height"
        android:layout_marginStart="@dimen/medium_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixture_time"/>

    <TextView
        android:id="@+id/fixture_home_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/small_txt_size"
        app:layout_constraintBottom_toBottomOf="@+id/fixture_home_img"
        app:layout_constraintEnd_toStartOf="@+id/fixture_home_score"
        app:layout_constraintStart_toEndOf="@+id/fixture_home_img"
        app:layout_constraintTop_toTopOf="@+id/fixture_home_img"/>

    <TextView
        android:id="@+id/fixture_home_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/silverColor"
        android:textSize="@dimen/medium_txt_size"
        app:layout_constraintBottom_toBottomOf="@+id/fixture_home_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fixture_home_img"/>

    <ImageView
        android:id="@+id/fixture_away_img"
        android:layout_width="@dimen/small_view_width"
        android:layout_height="@dimen/small_view_height"
        android:layout_marginTop="@dimen/small_margin"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="@+id/fixture_home_img"
        app:layout_constraintTop_toBottomOf="@+id/fixture_home_img"/>

    <TextView
        android:id="@+id/fixture_away_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginStart="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/small_txt_size"
        app:layout_constraintBottom_toBottomOf="@+id/fixture_away_img"
        app:layout_constraintEnd_toStartOf="@+id/fixture_away_score"
        app:layout_constraintStart_toEndOf="@+id/fixture_away_img"
        app:layout_constraintTop_toTopOf="@+id/fixture_away_img"/>

    <TextView
        android:id="@+id/fixture_away_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/medium_padding"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/medium_txt_size"
        app:layout_constraintBottom_toBottomOf="@+id/fixture_away_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fixture_away_img"/>

    <View
        android:id="@+id/fixture_dividor"
        android:layout_width="300dp"
        android:layout_height="@dimen/x_small_margin"
        android:layout_marginEnd="@dimen/xxx_large_margin"
        android:layout_marginStart="@dimen/xxx_large_margin"
        android:layout_marginTop="@dimen/small_margin"
        android:background="@color/darkRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fixture_away_img"/>

    <TextView
        android:id="@+id/fixure_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/small_margin"
        android:fontFamily="@font/fredoka_one"
        android:padding="@dimen/small_padding"
        android:textAlignment="center"
        android:textColor="@color/darkGreen"
        android:textSize="@dimen/medium_txt_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fixture_dividor"
        app:layout_constraintStart_toStartOf="@+id/fixture_dividor"
        app:layout_constraintTop_toBottomOf="@+id/fixture_dividor"/>

  </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>